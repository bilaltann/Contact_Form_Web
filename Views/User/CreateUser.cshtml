@model IletisimForm.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .control-label {
            color: antiquewhite;
        }
        .containertop{
            margin-top:20px;
        }

        .main-popup {
            background: rgba(0, 0, 0, 0.5);
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center; /* Yatayda ortala */
            align-items: center; /* Dikeyde ortala */
            z-index: 1000; /* Popup'ın önde görünmesini sağla */
        }

        .popup {
            text-align: center;
            width: 90%; /* Mobil uyumlu genişlik */
            max-width: 600px; /* Maksimum genişlik */
            padding: 20px;
            background: white;
            border-radius: 10px; /* Köşeleri yuvarla */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5); /* Gölge */
            position: relative; /* Kapat butonunu konumlandırmak için */
            overflow: hidden; /* İçeriğin dışa taşmasını önle */
        }

            .popup img {
                max-width: 100%; /* Genişlik olarak %100'ü geçmesin */
                height: auto; /* Oranlı şekilde yükseklik */
                max-height: 400px; /* Maksimum yükseklik */
                object-fit: contain; /* İçeriği sığdır */
                border-radius: 8px; /* Köşeleri yuvarla */
                margin-bottom: 15px; /* Resim ile alt içerik arası boşluk */
            }

        .popup-close {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            font-size: 22px;
            color: red;
            font-weight: bold;
        }

        .button-ok {
            background-color: red;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

            .button-ok:hover {
                background-color: darkred; /* Hover efekt */
            }


    




    </style>
</head>

<body class="body">
    <img src="~/lib/bg4-dark.jpg" alt="Background Image" class="img" style="width: 100%; position: absolute; top: 0; left: 0; z-index: -1; opacity: 1;">

    <div class="container">
        <div class="row justify-content-center">
            <div class="containertop">
                <h2 style="color: aliceblue;">İletisim</h2>
                <p style="color: aliceblue;">
                    Sorularınız mı var? Fikirleriniz mi var? Bizimle iletişime geçmekten
                    çekinmeyin, destek ekibimize 7/24 ulaşabilirsiniz.
                </p>
            </div>
            <form asp-action="CreateUser" asp-controller="User" method="post" class="form-background col-md-12  col-log-6 mt-5 p-4  bg-">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="control-label">İsim*</label>
                        <input type="text" asp-for="FirstName" class="form-control" placeholder="İsim" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Telephone" class="control-label">Telefon*</label>
                        <input type="text" asp-for="Telephone" class="form-control" placeholder="Telefon" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Eposta" class="control-label ">E Posta*</label>
                        <input type="text" asp-for="Eposta" class="form-control" placeholder="E Posta" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Department" class="control-label">Departman*</label>
                        <select asp-for="Department" class="form-control">
                            <option value="" disabled selected>Departman Seçiniz</option>
                            <option value="Muhasebe">Muhasebe</option>
                            <option value="TeknikDestek">Teknik Destek</option>
                            <option value="InsanKaynaklari">İnsan Kaynakları</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-12">
                        <label asp-for="Message" class="control-label">Mesajınız*</label>
                        <textarea asp-for="Message" class="form-control" placeholder="Mesajınız"></textarea>
                    </div>
                </div>
                <div class="d-grid justify-content-center ">
                    <button type="submit" class="btn btn-primary ml-4" style="width: 350px;">Gönder</button>
                </div>
            </form>
            <div class="main-popup">
                <div class="popup">
                    <div class="popup-close">X</div>
                    <div class="popup-content">
                        <img src="~/lib/20.png" />
                        <h3>Merhaba! İstek, öneri veya şikayetlerinizi bizimle paylaşabilirsiniz. Size en kısa sürede geri dönüş yapacağız. 7/24 hizmetinizdeyiz!</h3>
                        <button class="button-ok">Tamam</button>
         
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        const mainPopup = document.querySelector('.main-popup');
        const close = document.querySelector('.popup-close');
        const buttonOk = document.querySelector('.button-ok');
        close.addEventListener('click', () => {
            mainPopup.style.display = 'none';
        })
        buttonOk.addEventListener('click', () => {
            mainPopup.style.display = 'none';
        })
    </script>

    <script>
        const inputFailed = document.querySelectorAll('.form-control');
        inputFailed.forEach(input => {
            input.setAttribute('required', true);
        })
    </script>
}
